[calculator]
name:                          aims

[calculator.parameters]
xc:                            pbesol

[calculator.kpoints]
density:                       5

[calculator.basissets]
default:                       light

[calculator.socketio]
port:                          12345

[phonopy]
supercell_matrix:              [2, 2, 2]
displacement:                  0.01
is_diagonal:                   False
is_plusminus:                  auto
symprec:                       1e-05
q_mesh:                        [45, 45, 45]
workdir:                       phonopy

[restart]
command = sbatch vibes_phonopy.sh

[machine]
basissetloc =      /work/e05/e05/prakaya/chalcogenide_perovskites/species_defaults/defaults_2020
aims_command =     /work/e05/e05/prakaya/chalcogenide_perovskites/run_aims.sh
